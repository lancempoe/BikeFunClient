<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget">

    <mgwt:LayoutPanel>
        <mgwt:HeaderPanel>
            <mgwt:left>
                <mgwt:HeaderButton ui:field="backButton" backButton="true" text="Modules"></mgwt:HeaderButton>
            </mgwt:left>
            <mgwt:center>
                <g:HTML>Device</g:HTML>
            </mgwt:center>
        </mgwt:HeaderPanel>

        <mgwt:ScrollPanel scrollingEnabledX="false">
            <g:FlowPanel>
                <mgwt:WidgetList round="true">
                    <g:HorizontalPanel>
                        <g:HTML>Name: &nbsp;</g:HTML>
                        <g:HTML ui:field="name"></g:HTML>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:HTML>Platform: &nbsp;</g:HTML>
                        <g:HTML ui:field="platform"></g:HTML>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:HTML>Version: &nbsp;</g:HTML>
                        <g:HTML ui:field="version"></g:HTML>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:HTML>Phonegap Version: &nbsp;</g:HTML>
                        <g:HTML ui:field="pversion"></g:HTML>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:HTML>UUID: &nbsp;</g:HTML>
                        <g:HTML ui:field="uuid"></g:HTML>
                    </g:HorizontalPanel>
                </mgwt:WidgetList>


            </g:FlowPanel>
        </mgwt:ScrollPanel>

    </mgwt:LayoutPanel>

</ui:UiBinder> 