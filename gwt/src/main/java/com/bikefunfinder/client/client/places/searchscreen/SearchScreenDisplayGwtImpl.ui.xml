<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget"
        >

    <ui:style>
        .positioningForName {
            position:absolute; top:35%;
            text-transform: none;
            font-size: 15px !important;
            font-weight: bold !important;
            color: white;
        }
    </ui:style>

    <mgwt:LayoutPanel >
        <mgwt:HeaderPanel>
            <mgwt:left>
                <mgwt:HeaderButton ui:field="backButton" backButton="true" text="Back" />
            </mgwt:left>
            <mgwt:right>
                <g:HTML styleName="{style.positioningForName}">Advanced Search</g:HTML>
            </mgwt:right>
        </mgwt:HeaderPanel>


        <mgwt:ScrollPanel ui:field="scrollPanel" >
            <g:FormPanel ui:field="form" width="100%">
                <g:HTMLPanel>

                    <mgwt:WidgetList ui:field="widgetList" />
                    <mgwt:Button ui:field="searchRide" text="Search"/>

                </g:HTMLPanel>
            </g:FormPanel>
        </mgwt:ScrollPanel>

    </mgwt:LayoutPanel>
</ui:UiBinder>