<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget">

    <ui:style>
        .positioningForName {
        position:absolute; top:35%;
        text-transform: none;
        font-size: 13px !important;
        font-weight: normal !important;
        }
    </ui:style>

    <mgwt:LayoutPanel>
        <mgwt:HeaderPanel>
            <mgwt:left>
                <mgwt:HeaderButton ui:field="backButton" backButton="true" text="Back" />
            </mgwt:left>
            <mgwt:right>
                <g:HTML styleName="{style.positioningForName}">View Ride</g:HTML>
            </mgwt:right>
        </mgwt:HeaderPanel>

        <mgwt:ScrollPanel>
            <g:FormPanel ui:field="form">
                <g:HTMLPanel ui:field="formContents">

                    <mgwt:Button ui:field="eventRideMapButton" text="Show Map"/>
                    <mgwt:WidgetList ui:field="widgetList" />
                    <mgwt:Button ui:field="editRideButton" text="Edit Ride"/>
                    <g:HTML ui:field="currentTrackings" styleName="{style.positioningForName}"/>

                </g:HTMLPanel>
            </g:FormPanel>
        </mgwt:ScrollPanel>
    </mgwt:LayoutPanel>
</ui:UiBinder>