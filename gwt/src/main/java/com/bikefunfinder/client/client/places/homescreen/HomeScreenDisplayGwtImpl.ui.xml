<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget">

    <mgwt:LayoutPanel>
        <mgwt:HeaderPanel>
            <mgwt:left>
                <g:VerticalPanel verticalAlignment='ALIGN_MIDDLE' horizontalAlignment='ALIGN_CENTER' width="50%" height="100%">
                    <g:cell><g:HTML ui:field="cityName">Portland</g:HTML></g:cell>
                </g:VerticalPanel>
            </mgwt:left>
            <mgwt:right>
                <g:HorizontalPanel>
                    <mgwt:base.ButtonBase ui:field="addButton"/>
                    <mgwt:base.ButtonBase ui:field="searchButton"/>
                    <mgwt:base.ButtonBase ui:field="loginButton"/>
                </g:HorizontalPanel>
            </mgwt:right>
        </mgwt:HeaderPanel>

        <mgwt:ScrollPanel ui:field="scroller" scrollingEnabledX="false">
            <g:FlowPanel  ui:field="bikeEntries"/>
        </mgwt:ScrollPanel>

        <g:FlowPanel>
            <g:VerticalPanel>
                <g:HorizontalPanel>
                    <g:cell horizontalAlignment="ALIGN_LEFT">
                        <mgwt:Button ui:field="hereAndNowButton" text="Here &amp; now"/>
                    </g:cell>
                    <g:cell horizontalAlignment="ALIGN_RIGHT">
                        <mgwt:Button ui:field="timeAndDayButton" text="Time &amp; day"/>
                    </g:cell>
                </g:HorizontalPanel>
            </g:VerticalPanel>
        </g:FlowPanel>

    </mgwt:LayoutPanel>
</ui:UiBinder>