<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget">

    <mgwt:LayoutPanel>
        <mgwt:HeaderPanel>
            <mgwt:left>
                <g:VerticalPanel verticalAlignment='ALIGN_MIDDLE' horizontalAlignment='ALIGN_CENTER' width="50%" height="100%">
                    <g:cell><g:HTML ui:field="cityName">Portland</g:HTML></g:cell>
                </g:VerticalPanel>
            </mgwt:left>
            <mgwt:right>
                <g:HorizontalPanel>
                    <mgwt:base.ButtonBase ui:field="addButton"/>
                    <mgwt:base.ButtonBase ui:field="searchButton"/>
                    <mgwt:base.ButtonBase ui:field="loginButton"/>
                </g:HorizontalPanel>
            </mgwt:right>
        </mgwt:HeaderPanel>

        <mgwt:ScrollPanel scrollingEnabledX="false" width="100%">
            <g:VerticalPanel  ui:field="cellVP" width="100%"/>
            <!--<mgwt:CellList ui:field="cellList"></mgwt:CellList>-->
        </mgwt:ScrollPanel>

        <g:VerticalPanel  width="100%">
            <g:HorizontalPanel width="100%">
                <g:cell horizontalAlignment="ALIGN_LEFT">
                    <mgwt:Button ui:field="hereAndNowButton" text="Here &amp; now"/>
                </g:cell>
                <g:cell horizontalAlignment="ALIGN_RIGHT">
                    <mgwt:Button ui:field="timeAndDayButton" text="Time &amp; day"/>
                </g:cell>
            </g:HorizontalPanel>
        </g:VerticalPanel>

    </mgwt:LayoutPanel>
</ui:UiBinder>